<div class="row my-3">
  <nav class="col-12">
    <ul class="pagination align-items-center justify-content-center pg-blue">
      {% if paginate.previous.is_link %}
        <li class="page-item">
          <a class="page-link" href="{{ paginate.previous.url }}">
            <span>&laquo;</span>
          </a>
        </li>
      {% else %}
        <li class="page-item disabled">
          <a class="page-link" href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
          </a>
        </li>
      {% endif %}
      {% for page in paginate.parts offset: paginate.current_pages - 1 %}
        {% if page.is_link and page.title < paginate.current_page and page.title > 0 %}
          <li class="page-item"><a class="page-link" href="{{ page.url }}">{{ page.title }}</a></li>
        {% endif %}
      {% endfor %}
      <li class="page-item active">
        <a class="page-link" href="#">{{ paginate.current_page }}</a>
      </li>
      {% for page in paginate.parts limit: 5 offset: paginate.current_page %}
        {% if page.is_link %}
          <li class="page-item"><a class="page-link" href="{{ page.url }}">{{ page.title }}</a></li>
        {% else %}
          {% break %}
        {% endif %}
      {% endfor %}
      {% if paginate.next.is_link %}
        <li class="page-item">
          <a class="page-link" href="{{ paginate.next.url }}">
            <span>&raquo;</span>
          </a>
        </li>
      {% else %}
        <li class="page-item disabled">
          <a class="page-link" href="#">
            <span>&raquo;</span>
          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
</div>
